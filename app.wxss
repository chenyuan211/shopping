/**app.wxss**/
.background_color1 {
  background-color: white;
}
.background_color2 {
  background-color: rgba(221, 82, 30, 1);
}
.background_color3 {
  background: linear-gradient(45deg, #02AAB0 0%, #00CDAC 100%);
}
.background_color4 {
  background-color: rgba(2, 170, 176, 1);
}

.font_color1 {
  color: rgba(51, 51, 51, 1);
}
.font_color2 {
  color: rgba(51, 51, 51, 0.6);
}
.font_color3 {
  color: rgba(221, 82, 30, 1);
}
.font_color4 {
  color: rgba(51, 51, 51, 0.85);
}
.font_color5 {
  color: rgba(51, 51, 51, 0.45);
}
.font_color6 {
  color: rgba(2, 170, 176, 1);
}
.font_color7 {
  color: rgba(51, 51, 51, 0.3);
}

.borderColor {
  border-color: rgba(0, 0, 0, 0.1) !important;
}
.border_color1 {
  border: 1px solid rgba(0, 0, 0, 0.1);
}
.border_color2 {
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}
.border_color3 {
  border: 1px solid #02AAB0;
}
.van-swipe-cell__right {
  height: 80px;
  line-height: 80px;
  background-color: rgba(221, 82, 30, 1);
  color: white;
  width: 60px;
  font-size: 14px;
  font-weight: bold;
  text-align: center;
}
.public-footer {
  position: fixed;
  width: 100%;
  height: 50px;
  background-color: white;
  left: 0;
  bottom: 0;
  z-index: 9;
}
.public-max-btn {
  width: 70%;
  height: 37px;
  background: #02AAB0;
  border-radius: 4px;
  margin: auto;
  color: white;
  font-size: 14px;
  font-weight: 500;
  padding: 0 !important;
  border: 0 !important;
  position: relative;
  top: 6px;
}
.van-switch--on {
  background: #02AAB0 !important;
}
.Public-button {
  width: 100%;
  height: 44px;
  position: absolute;
  bottom: 28px;
}
.Public-button button {
  width: 85%;
  height: 44px;
  padding: 0 !important;
  border: 0 !important;
  background: #02AAB0;
  border-radius: 4px;
  line-height: 44px;
  color: white;
  font-size: 14px;
  font-weight: 500;
}
.bottom_text {
  width: 100%;
  font-size: 11px;
  margin: auto;
  text-align: center;
}
.loading {
  text-align: center;
}
button::after {
  border: 0 !important;
}
